/* pages/product/product.wxss */

.root {
  margin-top: 60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 150rpx;
}

.bottom {
  height: 120rpx;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  background: #fff;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.image {
  height: 90vh;
  width: 100%;
  background: #eee;
}

.name {
  font-size: 30rpx;
  width: 75vw;
  font-weight: 800;
  margin: 60rpx auto 0rpx;
  color: #000;
  text-align: center;
}

.prop_title {
  color: #000;
  margin-top: 15rpx;
  font-weight: 800;
  font-size: 30rpx;
}

.prop_item_positive {
  display: inline-block;
  padding: 5rpx 20rpx;
  text-align: center;
  color: #fff;
  font-size: 26rpx;
  margin-left: 30rpx;
  background: #292929;
}

.prop_item_negative {
  display: inline-block;
  padding: 5rpx 20rpx;
  text-align: center;
  color: #292929;
  font-size: 26rpx;
  margin-left: 30rpx;
}

.add_cart {
  background: #000;
  color: #fff;
  margin-left: 30rpx;
  font-size: 28rpx;
  padding: 15rpx 75rpx;
  display: inline-block;
}

.product_price {
  font-size: 26rpx;
  font-weight: 700;
  margin-right: 30rpx;
  display: inline-block;
}
