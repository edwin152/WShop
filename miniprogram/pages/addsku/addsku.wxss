/* pages/addsku/addsku.wxss */
.title{
  width: 100%;
  font-size: 40rpx;
  padding-left: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.line{
  margin-top: 10rpx;
}

.prop_box{
  width: 80%;
  margin: 20rpx auto 0rpx auto;
}

.prop_select{
  height: 90rpx;
  line-height: 90rpx;
  color: #000000;
  font-size: 36rpx;
}

.prop_none{
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #000000;
  font-size: 36rpx;
  border: 1px #000000 solid;
}

.prop_item_box{
  margin-top: 10rpx;
  width: 100%;
}

.prop_item_select{
  display: inline-block;
  padding: 10rpx 20rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 36rpx;
  margin-right: 10rpx;
  background: #000000;
  border: 1px #000000 solid;
}

.prop_item_none{
  display: inline-block;
  padding: 10rpx 20rpx;
  text-align: center;
  color: #000000;
  font-size: 36rpx;
  margin-right: 10rpx;
  border: 1px #000000 solid;
}

.stock_info_box{
  margin-top: 30rpx;
}

.input_box{
  display: flex;
  height: 80rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  flex-direction: row;
}

.input_title{
  display: inline-block;
  padding: 0rpx 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 200rpx;
}

.input{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px #000000 solid;
}