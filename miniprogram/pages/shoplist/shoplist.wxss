/* pages/shoplist/shoplist.wxss */

.search_box {
  width: 100%;
  height: 100rpx;
  background: #fff;
  align-items: center;
  display: flex;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
}

.title_left {
  width: 40rpx;
  height: 40rpx;
  margin: auto 20rpx;
}

.title_text {
  width: auto;
  height: 100%;
  display: inline-flex;
  margin: auto;
  font-size: 30rpx;
  font-weight: 800;
  color: #292929;
  line-height: 100rpx;
  letter-spacing:28rpx;
}

.title_right {
  width: 40rpx;
  height: 40rpx;
  margin: auto 20rpx;
}

button::after {
  border: none;
}

.search_submit {
  color: #292929;
  height: 54rpx;
  line-height: 54rpx;
  font-size: 30rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  border: 0px;
  background: rgba(255, 255, 255, 0);
  box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
  box-sizing: initial;
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
}

.shop_list_box {
  width: 100%;
}

.gone_line {
  height: 80rpx;
}

.shop_item {
  /* box-shadow: 0rpx 0rpx 20rpx 0rpx #eee; */
  border-radius: 10rpx;
  padding-bottom: 20rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.shop_item_image {
  width: 100%;
  height: 500rpx;
  background: #eaeaea;
  /* border-top-left-radius: 10rpx; *//* border-top-right-radius: 10rpx; */
}

.shop_item_name {
  margin-left: 20rpx;
  color: #292929;
  font-size: 26rpx;
  font-weight: 800;
  text-align: center;
}

.shop_item_price {
  margin-left: 20rpx;
  /* color: #fb4545; */
  font-size: 26rpx;
  text-align: center;
}

