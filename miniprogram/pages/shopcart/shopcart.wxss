/* pages/shopcart/shopcart.wxss */

.root {
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 150rpx;
}

.bottom {
  position: fixed;
  bottom: 0rpx;
  padding: 0 5%;
  background: #fff;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.cart_item {
  height: 300rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
}

.select {
  width: 38rpx;
  height: 38rpx;
  color: #000;
  font-size: 100rpx;
  font-weight: 1000;
  line-height: 30rpx;
  text-align: center;
  border: 1px #000 solid;
}

.image {
  width: 200rpx;
  height: 300rpx;
  margin-left: 50rpx;
  background: #eee;
}

.detail {
  flex: 1;
  height: 100%;
  margin-left: 30rpx;
}

.name {
  position: relative;
  font-size: 34rpx;
  font-weight: 700;
  top: 5rpx;
}

.norms {
  position: relative;
  font-size: 30rpx;
  color: #ccc;
  top: 50rpx;
}

.delete {
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  top: 30rpx;
  right: 0rpx;
  padding-right: 30rpx;
}

.count_layout {
  position: absolute;
  top: 210rpx;
  right: 0rpx;
  padding-right: 30rpx;
}

.arrow {
  width: 34rpx;
  height: 34rpx;
  display: inline-block;
  margin-top: 2rpx;
}

.count {
  height: 34rpx;
  line-height: 34rpx;
  text-align: top;
  font-size: 34rpx;
  font-weight: 400;
}

.price {
  position: absolute;
  font-size: 32rpx;
  font-weight: 700;
  top: 270rpx;
  right: 0rpx;
  padding-right: 30rpx;
}

.total_price {
  width: 90%;
  text-align: center;
  font-size: 32rpx;
  margin-top: 15rpx;
}

.subimt {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #000;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}
